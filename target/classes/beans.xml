<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">
   <bean id="phone" class="com.soft1721.spring.hello.phone">
       <constructor-arg name="brand" value="vivo"/>
       <constructor-arg name="price" value="2000"/>
   </bean>
    <bean id="Student" class="com.soft1721.spring.hello.Student">
        <!--<property name="age" value="25"/>-->
        <!--<property name="name" value="lily"/>-->
        <property name="name" value="汤先送"/>
        <property name="age" value="25"/>
        <property name="phone" ref="phone"/>

    </bean>

</beans>